<%- include("partials/header.ejs") %>

   <div class="container">
    <div class="card" id="formPergunta">
        <div class="card-header">
            <h3>Faça uma pergunta</h3>
        </div>
        <div class="card-body">
                <form method="post" action="/questiondid">
                    <label for="titulo"> Título </label>
                    <input type="text" name="titulo" placeholder="O titulo da pergunta" class="form-control"><br>
                    <label for="descricao">Descrição</label>
                    <textarea name="descricao" id="descricao" placeholder="Descreva a sua pergunta aqui" cols="30" rows="10" class="form-control"></textarea><br>
            
                    <input type="submit" class="btn btn-primary" value="Enviar"></input>
                </form>
        </div>
    </div>
   </div>
    
